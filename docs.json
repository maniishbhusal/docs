{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Pdflet",
  "theme": "mint",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/images/favicon.ico",
  "colors": {
    "primary": "#f05335",
    "light": "#ff6b4a",
    "dark": "#d9442c"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://pdflet.dev/dashboard"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://pdflet.dev/signup"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["introduction", "quickstart", "authentication"]
          },
          {
            "group": "Examples",
            "pages": ["examples/invoices", "examples/reports"]
          },
          {
            "group": "SDKs & Libraries",
            "pages": ["sdks/python", "sdks/javascript", "sdks/curl"]
          },
          {
            "group": "Resources",
            "pages": ["pricing", "errors"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/overview",
              "api-reference/html-to-pdf",
              "api-reference/get-conversion",
              "api-reference/api-keys"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/pdflet",
          "icon": "github"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@pdflet.dev",
          "icon": "envelope"
        }
      ]
    }
  },
  "footer": {
    "socials": {
      "twitter": "https://twitter.com/pdflet",
      "github": "https://github.com/pdflet"
    }
  },
  "api": {
    "baseUrl": "https://api.pdflet.dev/api/v1"
  }
}
